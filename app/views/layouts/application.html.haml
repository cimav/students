!!!
%html
  %head
    %title= @page_title || "Alumnos CIMAV"
    = javascript_include_tag "jquery-1.9.1"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "bootstrap.min"
    = javascript_include_tag "bootstrap.min"
    /[if lt IE 8]
    =# javascript_include_tag :defaults
    =# javascript_include_tag 'jquery-ui-1.8.11.custom.min.js'
    - if !@include_js.nil?
      = javascript_include_tag @include_js
    = csrf_meta_tag
  %body
    .row
      %nav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar

            %a.navbar-brand{:href=>"/"} Alumnos CIMAV
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{:href => "/logout"}
                  %span.glyphicon.glyphicon-log-out
                  salir

      .container-fluid{:style=>"padding-left: 30px;"}
        .row.content
          .col-md-2.sidebar-nav-fixed
            .sidebar-nav-fixed.affix
              %br
              %br
              %br
              %center
                - if @student.image_url.nil?
                  %div{:style=>"width:200px;height:200px;border: 0px solid #EEEEEE"}
                    = image_tag "http://posgrado.cimav.edu.mx/assets/student/fallback/medium_default.jpg", :id => "img-medium-#{@student.id}", :class=> "img-circle", :width=>"200px", :height=>"200px", :alt=>"Buscando imagen...", :align=>"center"
                - else
                  %div{:style=>"width:200px;height:200px;border: 0px solid #EEEEEE"}
                    = image_tag "http://posgrado.cimav.edu.mx/#{@student.image_url(:medium)}", :id => "img-medium-#{@student.id}", :class=> "img-circle", :width=>"200px", :height=>"200px", :alt=>"Buscando imagen...", :align=>"center"
                %br
                %strong= "#{@student.full_name}"
                %strong= "#{@student.program.name}"
                %br
                %br
              %ul.nav.nav-pills.nav-stacked
                %li{:class => active_class(root_path)}
                  %a.menu{'href' => "/"}= "  Inicio"
                %li{:class => active_class("/horarios/#{@student.id}/0")}
                  %a.menu{'href' => "/horarios/#{@student.id}/0"}= "  Horarios"
                %li{:class => active_class("/calificaciones")}
                  %a.menu{'href' => "/calificaciones"}= "  Calificaciones"
                %li{:class => active_class("/kardex/#{@student.id}")}
                  %a.menu{'href' => "/kardex/#{@student.id}"}= "  Kardex"
                %li{:class => active_class("/avances")}
                  %a.menu{'href' => "/avances"}= "  Avances"
                %li{:class => active_class("/servicios/#{@student.id}")}
                  %a.menu{'href' => "/servicios/#{@student.id}"}= "  Servicios"
                %li{:class => active_class("/inscripcion/cimav")}
                  %a.menu{'href' => "/inscripcion/cimav"}= "  Inscripcion"

          .col-md-10.content
            .container
              = yield


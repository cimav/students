=hidden_field_tag :hidden_name, "#{@student.first_name} #{@student.last_name}"
%div{'id'=>'advances_files'}
  %h2= "Avances"
  - if @term_student.size==0
    = "No hay ciclos activos"
  - @term_student.each_with_index do |ts, index|
    %a{"class"=>"menu-selected"}= "Ciclo: #{ts.term.name}"
    - counter = 0
    - advance_date_flag = 0
    - sat = StudentAdvancesFile::STUDENT_ADVANCE_TYPE.clone
    - StudentAdvancesFile.where(:term_student_id=>ts.id).each do |saf|
      - if ts.term.advance_start_date <= Date.today and Date.today <= ts.term.advance_end_date
        - advance_date_flag = 1
      %div{'id'=>"student_advances_file_#{saf.id}",'class'=>'file_class'}
        = "* #{StudentAdvancesFile::STUDENT_ADVANCE_TYPE[saf.student_advance_type]}:"
        %a{'href' => "/avances/#{saf.id}/file"}= saf.description
        - if advance_date_flag == 1
          = link_to 'Eliminar archivo', "/avances/borrar/#{saf.id}", :class => 'delete-file', :saf_id=>saf.id
        = link_to 'Mostrar mensajes', "#", :class => 'show-messages',:id=>"show-messages-#{saf.id}",:saf_id=>saf.id
        - safms = StudentAdvancesFileMessage.where(:student_advances_file_id=>saf.id)
        %div{'id'=>"student_advances_file_messages_add_#{saf.id}",'class'=>'add-messages','style'=>"display: none;"}
          %div{:id=>"div-messages-#{saf.id}"}
            - safms.each do |safm|
              %div{:id=>"div-message-#{safm.id}"}
                %a{:class=>'a-name'}= "#{safm.attachable.first_name} #{safm.attachable.last_name}"
                = "-"
                = safm.message
                - if safm.attachable_type=="Student"
                  %a{:id=>"delete-link-#{safm.id}",:message_id=>safm.id,:class=>"delete-message",:href=>"#",:saf_id=>saf.id}="Eliminar"

          = form_for(StudentAdvancesFileMessage.new, :remote=>true, :html => { :'data-type' => 'html', :id => "create_message_form_#{saf.id}" }) do |f|
            = f.hidden_field :student_advances_file_id, {:value => saf.id}
            = f.text_area :message, :cols=>60, :rows=>3, :id=>"text_area_#{saf.id}"
            = button_tag "Enviar mensaje", :disable_with => "Enviando..." , :id=>"button_#{saf.id}", :class=>"message-button", :saf_id=>saf.id
        - sat.delete(saf.student_advance_type)
        - counter = counter + 1

    - if counter != 2
      %br
      %br
      %br
      
      - if advance_date_flag==1
        = form_for(StudentAdvancesFile.new, :url => { :action => "upload_file" }, :html => {:id => 'item-upload-file-form', :multipart => true}) do |f|
          %div{'id'=>"upload_div",'class'=>'file_upload'}
            = f.hidden_field :term_student_id, {:value => ts.id }
            = f.select :student_advance_type, sat.invert.sort {|a,b| a[1] <=> b[1] }
            = f.file_field :file, {"multiple" => "multiple"}
            = f.submit "Subir Archivo"
      - else
        = "Las fechas para subir archivos de avances no estan abiertas para este ciclo"
  
  %p    
    -if !flash[:notice].nil? 
      = flash[:notice]
    -if !flash[:error].nil?
      = flash[:error]

